
{
  "manifest_version": 3,
  "name": "YouTube Subtitle Customizer",
  "version": "1.0",
  "description": "Customize YouTube subtitles with custom colors, sizes, and highlighting",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
